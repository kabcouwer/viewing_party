<h2>Search by movie title:</h2>
<%= form_with url: movies_path, method: :get, local: true do |form| %>
  <%= form.label :movie_search %>
  <%= form.text_field :movie_search %>
  <%= form.submit 'Find Movies' %>
<% end %>

<br>

<%= button_to "Find Top Rated Movies", movies_path, method: :get %>
<h2>Top Rated Movies with vote avereage:</h2>
<% @top_rated.each do |movie| %>
    <p><%= link_to "#{movie.title}", "/movies/#{movie.id}" %> Vote Average: <%= movie.rating %></p>
<% end %>
